{% extends "base.html" %}

{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
        <h1>Exchange History of <a href="{% url 'user:profile' stu.student_id %}">{{stu.first_name}}
            {{stu.last_name}}</a>
        </h1>

        <p/>

        <h4>{{stu.item_original.name}}</h4>

        {% for each in deals %}
        <p><font size=3> --> {{each.deal_time}}</font></p>
        <h4>{{each.item.name}}</h4>
        {% endfor %}
    </div>
</div>
{% endblock %}