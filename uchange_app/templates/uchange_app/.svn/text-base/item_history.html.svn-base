{% extends "base.html" %}

{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
        <h1>Exchange History of <a href="{% url 'user:detail' item.id %}"><font color=#DB7E56>{{item.name}}</font></a>
        </h1>

        <p/>
        {% if deals %}
        {% for each in deals %}
        <h4>({{each.p1.student_id}}) {{each.p1.first_name}} {{each.p1.last_name}}</h4>

        <p><font size=3> --> {{each.deal_time}}</font></p>
        {% endfor %}
        <h4>({{last.p2.student_id}}) {{last.p2.first_name}} {{last.p2.last_name}}</h4>
        {% endif %}
    </div>
</div>
{% endblock %}