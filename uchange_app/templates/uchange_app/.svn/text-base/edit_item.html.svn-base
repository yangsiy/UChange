{% extends "base.html" %}
{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
        <h1>Edit Item</h1>
        <br/>

        <p/>

        <div class="span11">
            <form action="/home/edit_item/operate/" method="post">{% csrf_token %}
                <div class="span2" align="right" style="line-height: 180%">
                    <p><strong>name:</strong></p>

                    <p><strong>description:</strong></p>
                </div>
                <div class="span9" align="left">
                    <input type="text" name='name' value="{{item.name}}"/>
                    <textarea rows="20" cols="20" name='description' style="width:100%">{{item.description}}</textarea>
                </div>
                <div class="span12" align="center">
                    <br/>
                    <button type="submit" class="btn submit btn-primary">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>
{% endblock %}